{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "build"
  },
  "include": [
    "src/**/*",
    "samples/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
